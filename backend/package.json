{
    "name": "nestly-backend",
    "version": "1.0.0",
    "description": "Backend API for Nestly property rental platform",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:playground": "tsx watch src/graphql-server-with-playground.ts",
        "dev:simple": "npx tsx watch src/simple-standalone-server.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx src/scripts/seed.ts",
        "db:reset": "drizzle-kit drop && drizzle-kit push",
        "lint": "npx eslint --config .eslintrc.js \"src/**/*.ts\" --no-ignore",
        "lint:fix": "npx eslint --config .eslintrc.js \"src/**/*.ts\" --fix --no-ignore",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
        "type-check": "tsc --noEmit",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f"
    },
    "dependencies": {
        "@apollo/server": "^4.12.2",
        "bcryptjs": "^2.4.3",
        "body-parser": "^2.2.0",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "drizzle-kit": "^0.31.4",
        "drizzle-orm": "^0.44.3",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "graphql": "^16.8.1",
        "graphql-playground-middleware-express": "^1.7.23",
        "graphql-scalars": "^1.22.4",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "postgres": "^3.4.7",
        "reflect-metadata": "^0.2.1",
        "type-graphql": "^2.0.0-beta.3"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "keywords": [
        "nodejs",
        "graphql",
        "postgresql",
        "prisma",
        "typescript",
        "apollo-server",
        "nestly-backend"
    ],
    "author": "Nestly Team",
    "license": "MIT"
}
